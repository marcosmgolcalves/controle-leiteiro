<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu"
    tools:context="com.example.marco.controleleiteiro.Menu">

    <TextView
        android:text="Controle Leiteiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUTORES"
        android:id="@+id/produtores"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/controle_diadio"
        android:layout_alignStart="@+id/controle_diadio"
        android:layout_alignRight="@+id/controle_diadio"
        android:layout_alignEnd="@+id/controle_diadio" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROLE DE ENTREGAS"
        android:id="@+id/controle_de_entregas"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTROLE DIARIO"
        android:id="@+id/controle_diadio"
        android:layout_below="@+id/produtores"
        android:layout_marginTop="65dp"
        android:layout_alignLeft="@+id/controle_de_entregas"
        android:layout_alignStart="@+id/controle_de_entregas"
        android:layout_alignRight="@+id/controle_de_entregas"
        android:layout_alignEnd="@+id/controle_de_entregas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FECHAMENTO DO MES"
        android:id="@+id/fechamento_mes"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/controle_de_entregas"
        android:layout_alignStart="@+id/controle_de_entregas"
        android:layout_marginBottom="145dp"
        android:layout_alignRight="@+id/controle_de_entregas"
        android:layout_alignEnd="@+id/controle_de_entregas" />
</RelativeLayout>
